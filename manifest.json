{
  "name": "Продвижение Резюме HH.ru",
  "description": "Продвигаем резюме на сайте HH.ru",
  "version": "10.10.2022",
  "author": "Oleg",
  "manifest_version": 3,

  "action": {
    "default_title": "Продвигаем резюме на сайте HH.ru",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "img/icon.png",
      "128": "img/icon.png"
    }
  },

  "icons": {
    "16": "img/icon.png",
    "128": "img/icon.png"
  },

  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage",
    "http://nn.hh.ru/applicant/resumes*",
    "https://nn.hh.ru/applicant/resumes*"
  ],
  "host_permissions": ["*://nn.hh.ru/applicant/resumes*"],

  "background": {
    "service_worker": "bg.js"
  }
}
