{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "airbnb"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 13,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "linebreak-style": 0,
    "eqeqeq": 0,
    "no-plusplus": 0,
    "no-console": 0,
    "no-alert": 0,
    "operator-linebreak": 0
  },
  "max-len": ["warn", { "code": 120 }] // устанавливает максимальную длину строки кода
}
